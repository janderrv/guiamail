<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>

<body>
    <div class="container">
        <h2 class="mt-5">Listagem de planos</h2>
        <hr>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% plans.forEach(plan => { %>
                <tr>
                    <td><%= plan.id %></td>
                    <td><%= plan.title %></td>
                    <td>R$<%= plan.value %></td>
                    <% if(plan.deactivated) {%>
                    <td>Desativado</td>
                    <td><a class="btn btn-success" href="/plans/activate/<%= plan.id %>" 
                        role="button">Ativar</a></td>
                    <% }else{ %>
                    <td>Ativo</td>
                    <td><a class="btn btn-danger" href="/plans/deactivate/<%= plan.id %>" 
                        role="button">Desativar</a></td>
                    <%}%>
                </tr>
                <% }) %>
            </tbody>
        </table>

    </div>
</body>

